---
/* Componente GlowCard
   Usa <slot /> para renderizar cualquier contenido */
---

<div class="card">
  <b></b>

  <div class="content">
    <slot />
  </div>
</div>

<style>
.card {
  position: relative;
  width: 190px;
  height: 254px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Gradiente principal */
.card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(315deg, #03a9f4, #ff0058);
  z-index: 0;
}

/* Glow */
.card::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(315deg, #03a9f4, #ff0058);
  filter: blur(30px);
  z-index: 0;
}

/* Capa oscura */
.card b {
  position: absolute;
  inset: 6px;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1;
  border-radius: 4px;
}

/* CONTENIDO */
.card .content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
  padding: 1rem;
}

/* Estilos opcionales reutilizables */
.card .title {
  font-weight: 500;
  font-size: 1em;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  line-height: 1.2;
}

.card .title span {
  display: block;
  margin-top: 4px;
  font-weight: 300;
  font-size: 0.75em;
}

.card .sci {
  display: flex;
  gap: 8px;
  margin-top: 10px;
  padding: 0;
}

.card .sci li {
  list-style: none;
}

.card .sci li a {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
  background: rgba(0, 0, 0, 0.25);
  color: rgba(255, 255, 255, 0.6);
  fill: currentColor;
  border-radius: 4px;
  transition: 0.3s;
}

.card .sci li a:hover {
  color: #fff;
}
</style>
